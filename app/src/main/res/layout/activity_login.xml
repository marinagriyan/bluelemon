<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textColor="@color/lightGray"
            android:fontFamily="@font/opensans"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/slogan"/>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_field_gray_transparent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="21dp"
                android:src="@drawable/profile_username_icon" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:background="@color/grayTransparent"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/opensans"
                android:background="@null"
                android:lines="1"
                android:inputType="text"
                android:textSize="11sp"
                android:hint="@string/username"
                android:textColorHint="@color/hintColorPassword" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_gray_transparent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="21dp"
                android:src="@drawable/password"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_marginStart="22dp"
                android:background="@color/grayTransparent"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/opensans"
                android:background="@null"
                android:lines="1"
                android:inputType="textPassword"
                android:textSize="11sp"
                android:hint="@string/password"
                android:textColorHint="@color/hintColorPassword" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/incorrect_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textColor="@color/red"
                android:fontFamily="@font/opensans"
                android:textSize="10sp"
                android:text="@string/incorrect_username_or_password"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_gray"
                android:text="@string/forgot_your_password"
                android:textColor="@color/hintColorPassword"
                android:gravity="center"
                android:textSize="10sp"/>

        </RelativeLayout>
        
        <TextView
            android:id="@+id/sign_in"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="20dp"
            android:text="@string/sign_in"
            android:textSize="14sp"
            style="@style/ButtonBlue" />
    </LinearLayout>
</ScrollView>