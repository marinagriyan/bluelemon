<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/reset_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginTop="115dp"
                android:src="@drawable/almost_there_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/we_re_almost_there"
                android:textSize="21sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_bold"/>

            <TextView
                android:layout_width="260dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/opensans"
                android:textSize="13sp"
                android:text="@string/password_revive"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/input_field_gray_transparent"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="21dp"
                    android:src="@drawable/password" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="22dp"
                    android:background="@color/darkGray"/>

                <EditText
                    android:id="@+id/password1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/opensans"
                    android:background="@null"
                    android:lines="1"
                    android:inputType="textPassword"
                    android:textSize="11sp"
                    android:hint="@string/new_password"
                    android:textColorHint="@color/hintColorPassword" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_gray_transparent"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="21dp"
                    android:src="@drawable/password"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="22dp"
                    android:background="@color/darkGray"/>

                <EditText
                    android:id="@+id/password2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/opensans"
                    android:background="@null"
                    android:lines="1"
                    android:inputType="textPassword"
                    android:textSize="11sp"
                    android:hint="@string/re_type_new_password"
                    android:textColorHint="@color/hintColorPassword" />

            </LinearLayout>

            <TextView
                android:id="@+id/doesnt_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textColor="@color/red"
                android:fontFamily="@font/opensans"
                android:textSize="10sp"
                android:text="@string/password_doesn_t_match"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/confirm"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                style="@style/ButtonBlue"
                android:textSize="11sp"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/confirm"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/congrats_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="144dp"
                android:src="@drawable/lock"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/opensans_bold"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/congrats"
                android:textSize="21sp"/>

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:fontFamily="@font/opensans"
                android:textAlignment="center"
                android:text="@string/password_resetted"/>

            <TextView
                android:id="@+id/login"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_marginTop="140dp"
                android:gravity="center"
                android:background="@drawable/button_blue"
                android:textSize="11sp"
                android:text="@string/login"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>