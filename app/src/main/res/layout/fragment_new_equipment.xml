<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGrayTransparent"
    tools:context=".Fragments.NewEquipmentFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_tab"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/opensans"
        android:text="@string/done" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/ref_number"/>

        <EditText
            android:id="@+id/ref_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/input_field_gray_stroke"
            style="@style/InputField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/make"
            />

        <EditText
            android:id="@+id/make"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/input_field_gray_stroke"
            style="@style/InputField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/model"
            />

        <EditText
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/input_field_gray_stroke"
            style="@style/InputField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/serial_number"
            />

        <EditText
            android:id="@+id/serial_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/input_field_gray_stroke"
            style="@style/InputField" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:background="@color/fieldColorGrayTransparent"
            android:paddingStart="25dp"
            android:paddingEnd="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/hintColor"
                android:textSize="12sp"
                android:fontFamily="@font/opensans"
                android:text="@string/entered_by" />

            <TextView
                android:id="@+id/entered_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/hintColor"
                android:textSize="12sp"
                android:fontFamily="@font/opensans_semibold"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/equipment_description"
            />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/input_field_gray_stroke"
            android:gravity="start"
            style="@style/InputField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/template"
            />

        <EditText
            android:id="@+id/template"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/InputField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/sites"
            />

        <Spinner
            android:id="@+id/sites"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/InputField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/department"
            />

        <EditText
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/InputField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/check_days"
            />

        <EditText
            android:id="@+id/frequency"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/input_field_gray_stroke"
            android:inputType="numberDecimal"
            style="@style/InputField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/next_check_due"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/input_field_gray_stroke"
            style="@style/InputField">

            <TextView
                android:id="@+id/check_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                style="@style/SmallText" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/calendar_icon"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:textColor="@color/hintColorPassword"
            android:text="@string/check_requirements"
            android:drawableEnd="@drawable/up_arrow"
            android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="45dp"
                android:background="@drawable/input_field_gray_stroke"
                style="@style/InputField">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/add_more_requirement"
                    style="@style/SmallText" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/plus"
                    android:tint="@color/lightGray"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="45dp"
                android:background="@color/fieldColorGrayTransparent">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            style="@style/InputField"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:src="@mipmap/ic_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_images"
                android:textSize="12.5sp"
                android:fontFamily="@font/opensans"
                android:textColor="@color/hintColorPassword"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            style="@style/SmallText"
            android:text="@string/comments"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="100dp"
            android:hint="@string/type_here"
            android:background="@drawable/input_field_gray_stroke"
            android:gravity="start"
            style="@style/InputField" />


    </LinearLayout>
    </ScrollView>

</LinearLayout>