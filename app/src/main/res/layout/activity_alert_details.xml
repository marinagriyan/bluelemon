<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AlertDetailsActivity"
    android:orientation="vertical"
    android:background="@color/backgroundGrayTransparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/profile"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"
            android:tint="@android:color/white"/>

        <ImageView
            android:id="@+id/notification"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/notification"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/yellow_circle"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/notification"
            android:src="@drawable/safety_module"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@android:color/white"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/yellow_circle"
            android:src="@drawable/safety_module"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/opensans_bold"
            android:textSize="13sp"
            android:text="Fire in the building"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_below="@id/title"
            android:layout_alignStart="@id/title"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/opensans"
            android:textSize="10sp"
            android:text="June 12, 2018"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:alpha="0.3"
        android:paddingStart="45dp"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:fontFamily="@font/opensans_bold"
        android:text="Action plan 1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>