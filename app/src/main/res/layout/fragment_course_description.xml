<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/backgroundGrayTransparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTextBold"
            android:text="@string/course_subject"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            style="@style/SmallTextDark"
            android:text="Fire Awareness"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTextBold"
            android:text="@string/course_venue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            style="@style/SmallTextDark"
            android:text="Queens"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTextBold"
            android:text="@string/tutor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            style="@style/SmallTextDark"
            android:text="Christina Donald"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTextBold"
            android:text="@string/date_and_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            style="@style/SmallTextDark"
            android:text="13 November 2018    7:00 PM"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallTextBold"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="28dp"
        android:text="@string/attendees"/>

    <LinearLayout
        android:id="@+id/requirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <!-- Add dynamically -->

        <include layout="@layout/requirement"/>
        <include layout="@layout/requirement"/>
        <include layout="@layout/requirement"/>
        <include layout="@layout/requirement"/>
        <include layout="@layout/requirement"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallText"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="35dp"
        android:text="@string/notes"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="45dp"
        android:text="10 rung Jacobs ladder on roof PEL 22	"
        android:background="@drawable/input_field_gray_stroke"
        android:gravity="start"
        style="@style/InputField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SmallText"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="35dp"
        android:text="@string/signature"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="45dp"
        android:text="type here"
        android:background="@null"
        android:gravity="start"
        style="@style/InputField" />

</LinearLayout>

</ScrollView>