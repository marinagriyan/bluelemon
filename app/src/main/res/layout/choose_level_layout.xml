<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="25dp"
    android:paddingEnd="45dp"
    android:layout_marginTop="40dp">

    <com.bluelemon.bluelemon.PresetRadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:orientation="vertical"
        app:presetRadioCheckedId="@id/level_0">

        <com.bluelemon.bluelemon.PresetValueButton
            android:id="@+id/level_0"
            style="@style/ButtonGray"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:presetButtonValueText="@string/level_0"
            app:presetButtonUnitText="@string/no_further_actions_neeeded" />

        <com.bluelemon.bluelemon.PresetValueButton
            android:id="@+id/level_1"
            style="@style/ButtonGray"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="20dp"
            app:presetButtonValueText="@string/level_1"
            app:presetButtonUnitText="@string/further_actions_and_follow_up_neeeded" />

        <com.bluelemon.bluelemon.PresetValueButton
            android:id="@+id/level_2"
            style="@style/ButtonGray"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="20dp"
            app:presetButtonValueText="@string/level_2"
            app:presetButtonUnitText=""/>

    </com.bluelemon.bluelemon.PresetRadioGroup>

</LinearLayout>