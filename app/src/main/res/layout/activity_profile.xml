<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity"
    android:orientation="vertical"
    android:background="@color/backgroundGrayTransparent">

    <include layout="@layout/toolbar_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorBlue"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/profile_pic_example"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/pic"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="-5dp"
            android:background="@drawable/blue_circle"
            android:src="@mipmap/pencil" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jason Lewis"
            android:textSize="13sp"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Manager"
            android:textSize="10sp"
            android:fontFamily="@font/opensans"
            android:textColor="@color/hintColor"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="12sp"
                android:fontFamily="@font/opensans"
                android:textColor="@color/hintColor"/>

            <TextView
                android:id="@+id/edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:fontFamily="@font/opensans"
                android:textColor="@color/hintColor"
                android:alpha="0.4"/>
            
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/edit_email"
                style="@style/InputField"
                android:background="@drawable/input_field_gray_stroke"
                android:text="Jason.lewis@cepl-cc.co.uk"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="12sp"
                android:fontFamily="@font/opensans"
                android:textColor="@color/hintColor"/>

            <TextView
                android:id="@+id/edit_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:fontFamily="@font/opensans"
                android:textColor="@color/hintColor"
                android:alpha="0.4"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/edit_password"
                style="@style/InputField"
                android:background="@drawable/input_field_gray_stroke"
                android:inputType="textPassword"
                android:text="....."/>

        </RelativeLayout>

        <TextView
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="40dp"
            style="@style/ButtonGreen"
            android:text="Save"
            android:layout_marginTop="35dp"/>

    </LinearLayout>

</LinearLayout>