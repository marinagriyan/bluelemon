<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">6sp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>


    <style name="DocumentsTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TrainingsTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="ButtonBlue" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_blue</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonGreen" parent="ButtonBlue">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ButtonRed" parent="ButtonBlue">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="ButtonYellow" parent="ButtonBlue">
        <item name="android:background">@drawable/button_yellow</item>
    </style>

    <style name="ButtonGray" parent="ButtonBlue">
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textColor">@color/hintColor</item>
    </style>

    <style name="SmallTextDark">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textColor">@color/hintColorPassword</item>
    </style>

    <style name="SmallTextBold">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/hintColorPassword</item>
    </style>

    <style name="InputField" parent="SmallText">
        <item name="android:background">@drawable/input_field_gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>



</resources>
